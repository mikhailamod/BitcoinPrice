<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projects.mikhail.bitcoinprice.MainActivity">

    <LinearLayout
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/linearLayout">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="181dp"
            app:cardBackgroundColor="#42A5F5"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_cardDetail"
                    android:layout_width="218dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_coin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:paddingLeft="8dp"
                        android:paddingTop="18dp"
                        android:text="TextView"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        tools:gravity="left" />

                    <TextView
                        android:id="@+id/textview_subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingTop="4dp"
                        android:text="Average: CoinMarketCap"
                        android:textColor="#F5F5F5"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/textview_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="16dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="12dp"
                        android:text="TextView"
                        android:textColor="#FFFFFF"
                        android:textSize="30sp"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="516dp" />

                    <Button
                        android:id="@+id/button_refresh"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="8dp"
                        android:text="Refresh"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:paddingRight="16dp"
                    app:srcCompat="@drawable/logo_bitcoin" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/graph_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/graph_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="0dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="12dp"
                    android:text="Bitcoin Graph"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/graph_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="Last 7 days"
                    android:textSize="10sp" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/main_graph"
                    android:layout_width="match_parent"
                    android:layout_height="183dp" />

                <LinearLayout
                    android:id="@+id/layout_dayOptions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/day_seven"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="8dp"
                        android:text="1 Week"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/days_fourteen"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="8dp"
                        android:text="2 Weeks"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/days_thirty"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="79dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:text="1 Month"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/days_sixty"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="8dp"
                        android:text="2 Months"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/graph_coindesk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:text="Powered by CoinDesk and EazeGraph"
                    android:textSize="8sp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="326dp"
        android:layout_height="76dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="510dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@+id/switch_rand"
            android:layout_toLeftOf="@+id/switch_rand"
            android:layout_weight="0.01"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

        <Switch
            android:id="@+id/switch_rand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/switch_rand"
            android:layout_weight="0.01"
            android:switchPadding="4dp"
            android:text="Display ZAR"
            android:textOff="Display ZAR"
            android:textOn="Display USD" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/switch_rand"
            android:layout_weight="0.01"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.75" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
